<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Views.Fragnents.ExercisesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="List Routes"
            android:background="@color/teal_700"
            android:textColor="@color/color1"
            android:textSize="28dp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/distance"
            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_route1"

                android:layout_width="409dp"
                android:layout_height="59dp"

                android:background="@color/purple_500"
                android:drawablePadding="16dp"
                android:gravity="center"
                android:padding="10dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Beginner"
                android:textColor="@color/color1"
                android:textSize="20dp"

                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_person_listfood"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.132"
                app:layout_constraintWidth_percent=".8" />

            <TextView
                android:id="@+id/tv_route2"

                android:layout_width="409dp"
                android:layout_height="59dp"

                android:background="@color/purple_500"
                android:drawablePadding="16dp"
                android:gravity="center"
                android:padding="10dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Professional"
                android:textColor="@color/color1"
                android:textSize="20dp"

                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_person_listfood"

                app:layout_constraintBottom_toTopOf="@+id/tv_route3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_route1"
                app:layout_constraintVertical_bias="0.517"
                app:layout_constraintWidth_percent=".8" />

            <TextView
                android:id="@+id/tv_route3"

                android:layout_width="409dp"
                android:layout_height="59dp"

                android:background="@color/purple_500"
                android:drawablePadding="16dp"
                android:gravity="center"
                android:padding="10dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Full Body"
                android:textColor="@color/color1"
                android:textSize="20dp"

                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_person_listfood"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.541"
                app:layout_constraintWidth_percent=".8" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</FrameLayout>


